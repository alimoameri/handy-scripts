#!/bin/bash

# Loop through each MP4 file
for file in *.mp4; do
    # Extract the base name without extension
    base_name="${file%.mp4}"
    
    # Define the output file name
    output_file="${base_name}_compressed.mp4"
    
    # Run ffmpeg command
    ffmpeg -i "$file" -r 60 -vcodec hevc_nvenc -crf 24 -y "$output_file"
done

